<h1>Add to <%= @recipe.name %> </h1>
<div class="container">
  <div class="form-group">
    <form class="" action="/add_recipe/<%= @recipe.id%>" method="post">
      <label for="ingredients">Ingredients</label>
      <input type="ingredients" name="" value="">
      <button type="submit" class="btn btn-info">Add a New Recipe</button>
    </form>
    <form class="" action="/add_recipe/<%= @recipe.id%>" method="post">
      <label for="instructions">Instructions</label>
      <input type="instructions" name="instructions">
      <button type="submit" class="btn btn-info">Add a New Recipe</button>
    </form>
    <form class="" action="/add_recipe/<%= @recipe.id%>" method="post">
      <label for="tags">Tag</label>
      <input type="text" name="tag">
      <button type="submit" class="btn btn-info">Add a New Recipe</button>
    </form>
  </div>
</div>

<a href="/">Home</a>
